{
  "name": "boilerplate-vue3",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "dev": "vite --open",
    "dev:host": "vite --host --open",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "format": "prettier --cache --write \"src/**/*.{vue,ts}\"",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .vue,.ts --fix --ignore-path .gitignore",
    "lint-staged": "lint-staged .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write"
    ],
    "*.{html,css,ejs,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vueuse/core": "^9.2.0",
    "@vueuse/head": "^0.7.12",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.8",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@unocss/preset-icons": "^0.45.22",
    "@unocss/preset-rem-to-px": "^0.45.22",
    "@unocss/transformer-variant-group": "^0.45.22",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.0.2",
    "eslint": "^8.23.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.5.1",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "^4.8.3",
    "unocss": "^0.45.22",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "vite": "^3.1.3",
    "vite-plugin-pages": "^0.26.0",
    "vite-plugin-vue-layouts": "^0.7.0",
    "vitest": "^0.23.4",
    "vue-tsc": "^0.40.13"
  }
}
